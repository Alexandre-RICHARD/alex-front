{
  "name": "alex_front",
  "type": "module",
  "version": "0.0.0",
  "main": "src/main.tsx",
  "author": "Alexandre RICHARD",
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "=== Dev ===": "",
    "start": "vite --open",
    "=== Lint & Tests ===": "",
    "global-test": "pnpm check-types && pnpm lint-fix && pnpm unit-test-once",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "unit-test-once": "vitest run  --mode dev",
    "unit-test-watch": "vitest watch --mode dev",
    "unit-test-report": "vitest run --mode dev --reporter=html --coverage.enabled=true && vite preview --outDir report --open",
    "=== Build & Production ===": "",
    "build": "tsc --build && vite build",
    "preview": "vite preview --open",
    "=== Packages ===": "",
    "install-dependencies": "pnpm i",
    "update-dependencies": "pnpm update"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.8.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.3.1",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.3.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitejs/plugin-react-swc": "^4.0.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "0.4.1",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.92.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
